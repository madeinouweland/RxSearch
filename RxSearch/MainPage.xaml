<Page
    x:Class="RxSearch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF96B209">
        <StackPanel Margin="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="textbox" Width="400" Margin="0,0,0,20" FontSize="20"/>
            <ListBox x:Name="listbox" Width="400" Height="400" FontSize="20" />
        </StackPanel>
    </Grid>
</Page>
